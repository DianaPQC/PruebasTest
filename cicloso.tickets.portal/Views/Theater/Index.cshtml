@model cicloso.tickets.entities.TheaterList

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>IdCity</th>
            <th>Name</th>
            <th>Address</th>
            <th>State</th>
            <th>Actions</th>
        </tr>
    </thead>
    @foreach (var item in Model.Theaters)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.IdCity</td>
            <td>@item.Name</td>
            <td>@item.Address</td>
            <td>@item.State</td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
